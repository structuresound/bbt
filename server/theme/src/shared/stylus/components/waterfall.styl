$cx = 28vmax
$cy = $cx
$cz = $cx
$sl = $cz / 4

#waterfall-graph
  width: 100%
  height: 100%
  position: absolute
  transform-style: preserve-3d
  transform: rotateX(-45deg) rotateY(45deg)
  .slice
    width: $cx
    height: $cy / 2
    position: absolute
    transform-style: preserve-3d
    // background: rgba(#000, 0.25)
  .shadow
    width: $cx
    height: $cy / 2
    position: absolute
    transform-origin: $cx $cy
    // background: rgba(#f00, 0.25)
  #slice-1
    transform: translateZ($sl * 2px)
  #slice-6
    transform: translateZ($sl * 1.5px)
  #slice-2
    transform: translateZ($sl * 1px)
  #slice-7
    transform: translateZ($sl * .5px)
  #slice-3
    transform: translateZ(0)
  #slice-8
    transform: translateZ($sl * -.5px)
  #slice-4
    transform: translateZ($sl * -1px)
  #slice-9
    transform: translateZ($sl * -1.5px)
  #slice-5
    transform: translateZ($sl * -2px)
  #shadow-1, #shadow-6
    transform: translateZ($sl * 2) translateY($cy/4) rotateX(90deg)
  #shadow-2, #shadow-7
    transform: translateZ($sl) translateY($cy/4) rotateX(90deg)
  #shadow-3, #shadow-8
    transform: translateZ(0) translateY($cy/4) rotateX(90deg)
  #shadow-4, #shadow-9
    transform: translateZ($sl * -1) translateY($cy/4) rotateX(90deg)
  #shadow-5, #shadow-10
    transform: translateZ($sl * -2) translateY($cy/4) rotateX(90deg)
  .base
    transform: rotateX(-90deg)
    background: rgba(255, 255, 255, 0.2)
    width: $cx
    height: $cz
