@require '../vars.styl'

$jA = .6

#join
  #join-confirmed-body
    text-align center

    i.fa-8x
      font-size 8em

    #join-confirmed-copy.row
      padding-top 3rem

  .well
    background-repeat repeat-x !important
    border none !important
  .well.bg-blue
    background linear-gradient(to bottom, rgba(cf-blue, $jA), rgba(cf-cyan, $jA)) !important
  .well.bg-green
    background linear-gradient(to bottom, rgba(cf-cyan, $jA), rgba(cf-green, $jA)) !important
  .well.bg-purple
    background linear-gradient(to bottom, rgba(cf-green, $jA), rgba(cf-purple, $jA)) !important
  .well.bg-red
    background linear-gradient(to bottom, rgba(cf-purple, $jA), rgba(cf-red, $jA)) !important
  .well.bg-gray
    background linear-gradient(to bottom, rgba(0, 0, 0, .8),  rgba(0, 0, 0, 0))

  background-size cover
  .spacer
    padding-top 3rem
  .mspacer
    padding-top 1rem
