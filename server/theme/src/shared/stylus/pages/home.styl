@require '../vars.styl'

$fixedbox
  box-sizing border-box
  display block
  width 100%
  height $navbar-height
  position fixed
  top 0%
  z-index 1000
  
#home
  video::-webkit-media-controls
    display:none !important

  #details .small
    color $gray-dark

  #bgvid-overlay
    background-image url('/static/video-overlay.png')
    background-repeat repeat
    opacity 0.4

  #details
    .container-fluid
      padding 0
      margin 0

  #details .small
    padding-top 1.5rem

  .lead, .small
    line-height: 1.5
  h1
    letter-spacing 1px
  h2
    letter-spacing 0px

  .fixed-nav
    @extend $fixedbox
    nav, .nav, ul, li
      background rgb(0,33,38)
      isolation isolate
    #mobile-tabs
      a:focus, a, a:link, a:hover
        background-color rgb(0,33,38) !important
        background rgb(0,33,38) !important

  .CodeMirror
    height auto

  .fixed-banner
    @extend $fixedbox
    font-weight bold
    .text
      right 0%
      font-size 2em
      margin-top 1em
      color #aaa
      mix-blend-mode lighten
    text-align center
    mix-blend-mode darken

  #contact-form
    input[type='text'], input[type='email'], textarea
      border 1px solid cf-cyan
      background-color white

  section    
    position relative

    img
      max-width 100%
    p
      font-size 16px

    &.section
      .container
        padding-top sectionTop
        padding-bottom sectionBottom

      figure > figcaption
        font-style italic
        margin-bottom 1em

      &#section-splash
        video::-webkit-media-controls
          display none !important

        @media screen and (max-width: $screen-sm)
          .row
            text-align: center;

        #treeline
          z-index 0
          width 100vw;
          min-width 1280px;
          height 40vh;
          max-width none
          -webkit-transform translate3d(0, 0, 0)
          pointer-events none

        #bgvid
          z-index -1
          position absolute
          bottom 0
          top 0
          right 0
          width 100%
          height 100%
          background-size  100% 100%
          background-color black /* in case the video doesn't fit the whole page*/
          background-position center center
          background-size contain
          object-fit cover /*cover video background */
          webkit-transform-style preserve-3d
          -webkit-transform translate3d(0, 0, 0)
          filter contrast(0.8) brightness(0.7)

    &#section-connect
      background-image linear-gradient(to right, rgb(220,220, 230), rgb(230, 230, 234) )
      color cf-dark-teal
      img
        max-width 80%
