{
  "name": "tmake",
  "description": "meta/dev package",
  "version": "0.0.1",
  "scripts": {
    "clean-cli": "cd cli && rm -Rf node_modules yarn.lock && yarn && cd node_modules && npm link tmake-core",
    "clean-plugins": "cd plugins/cmake && rm -Rf node_modules yarn.lock && yarn && cd node_modules && npm link tmake-core",
    "build-file": "cd file && rm -Rf node_modules yarn.lock && yarn && npm run build",
    "build-core": "cd core && rm -Rf node_modules yarn.lock && yarn && npm run build",
    "build-cli": "npm run clean-cli && cd cli && npm run build",
    "build-plugins": "npm run clean-plugins && cd plugins/cmake && npm run build",
    "build": "npm run build-file && npm run build-core && npm run build-plugins && npm run build-cli",
    "test": "NODE_ENV=test mocha */*/*.test.ts --recursive --compilers ts:ts-node/register --bail",
    "cover": "NODE_ENV=test nyc --report-dir coverage npm t",
    "travis": "npm run build && npm run cover"
  },
  "devDependencies": {
    "@ssense/tslint-config": "^4.0.0",
    "@types/chai": "^3.4.34",
    "@types/chalk": "^0.4.31",
    "@types/mocha": "^2.2.32",
    "@types/node": "^7.0.18",
    "babel-eslint": "^7.1.0",
    "babel-preset-es2015": "^6.18.0",
    "chai": "^3.5.0",
    "coveralls": "^2.11.15",
    "dts-generator": "^2.1.0",
    "eslint": "^3.11.1",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-formatter-pretty": "^1.1.0",
    "eslint-loader": "^1.6.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-mocha": "^4.7.0",
    "eslint-plugin-promise": "^3.3.0",
    "eslint-plugin-react": "^6.4.1",
    "grunt": "^1.0.1",
    "gulp": "^3.9.1",
    "gulp-typescript": "^3.1.6",
    "mocha": "^3.2.0",
    "nyc": "^8.4.0",
    "ts-node": "^1.6.1",
    "tslint": "^4.3.1",
    "tslint-microsoft-contrib": "^4.0.0",
    "typescript": "^2.3.2",
    "@types/lodash": "^4.14.52",
    "@types/bluebird": "^3.0.37",
    "@types/js-yaml": "^3.5.29",
    "@types/shelljs": "^0.6.0"
  },
  "dependencies": {
    "shelljs": "^0.7.7",
    "typed-json-transform": "^0.16.3",
    "bluebird": "^3.0.5",
    "lodash": "^4.3.0",
    "js-yaml": "^3.6.1"
  },
  "nyc": {
    "include": [
      "src/*.ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/node_modules",
      "docs",
      "examples",
      "server",
      "triebugger"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html",
      "lcov"
    ],
    "all": true
  }
}