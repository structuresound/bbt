{
  "name": "tmake-core",
  "description": "trieMake can fetch, build, and manage c++ dependencies",
  "version": "0.6.3",
  "homepage": "https://github.com/structuresound/tmake",
  "author": {
    "name": "Leif Shackelford",
    "email": "structuresound@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/structuresound/tmake.git"
  },
  "bugs": {
    "url": "https://github.com/structuresound/tmake/issues"
  },
  "licenses": [{
    "type": "MIT",
    "url": "https://github.com/structuresound/tmake/blob/master/LICENSE-MIT"
  }],
  "main": "dist/index.js",
  "types": "interfaces/index.d.ts",
  "scripts": {
    "build": "gulp scripts",
    "test": "NODE_ENV=test ../node_modules/.bin/mocha --recursive --compilers ts:ts-node/register --bail",
    "debug": "NODE_ENV=test ../node_modules/.bin/mocha --recursive --compilers ts:ts-node/register --bail --inspect=PORT --debug-brk",
    "cover": "NODE_ENV=test ../node_modules/.bin/nyc --report-dir coverage npm t",
    "travis": "npm run build && npm run cover"
  },
  "devDependencies": {
    "@types/form-data": "0.0.33",
    "@types/minimatch": "^2.0.29",
    "@types/nedb": "^1.8.3",
    "@types/request": "0.0.39",
    "@types/request-promise": "^4.1.33",
    "@types/which": "^1.0.28",
    "base62": "^1.1.2",
    "coveralls": "^2.11.15",
    "dts-generator": "^2.1.0",
    "nodemon": "^1.11.0"
  },
  "Keywords": [],
  "dependencies": {
    "chalk": "^1.1.1",
    "cli-spinner": "^0.2.6",
    "create-hash": "^1.1.2",
    "js-yaml": "^3.6.1",
    "json-stable-stringify": "^1.0.1",
    "map-stream": "^0.0.6",
    "nedb-promise": "^2.0.0",
    "ninja-build-gen": "^0.2.1",
    "node-status": "^1.0.0",
    "request": "^2.75.0",
    "request-progress": "^3.0.0",
    "request-promise": "^4.1.1",
    "which": "^1.2.11",
    "tmake-file": "^0.6.7"
  },
  "nyc": {
    "include": [
      "src/*.ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "node_modules"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html",
      "lcov"
    ],
    "all": true
  }
}